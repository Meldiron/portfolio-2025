---
import { Image } from "astro:assets";
import type { ResumeItem } from "../types/config";

type Props = ResumeItem;

const { title, company, date } = Astro.props;
---

<a target="_blank" href={company.url} class="py-3 flex items-center justify-between">
  <div class="flex items-center gap-4">
    <Image
      src={company.image}
      alt={company.name}
      width={40}
      height={40}
      class="rounded-md w-[40px] h-[40px] object-contain"
    />
    <div>
      <h3 class="font-medium">{title}</h3>
      <p class="hover-underline text-sm opacity-60">{company.name}</p>
    </div>
  </div>
  <p class="text-sm opacity-60">{date}</p>
</a>
