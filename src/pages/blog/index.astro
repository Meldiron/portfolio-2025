---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { blogPageContent } from "../../config";

const posts = await getCollection("posts");
posts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime();
  const dateB = new Date(b.data.pubDate).getTime();
  return dateB - dateA;
});
for (const post of posts) {
  const { remarkPluginFrontmatter } = await post.render();
  post.data.readingTime = remarkPluginFrontmatter.minutesRead;
}
---

<Layout seo={blogPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Blog</h1>
    <p class="opacity-60 mb-14">{blogPageContent.subtitle}</p>

    <div class="grid grid-cols-1 gap-10 sm:gap-6 mb-10">
      {
        posts.map((post) => (
          <a
            href={post.data.external ? post.data.external : `/blog/${post.slug}`}
            target={post.data.external ? "_blank" : "_self"}
            class={`relative sm:flex sm:flex-row-reverse sm:justify-between sm:gap-6 post border border-white rounded-xl p-3 ${post.data.highlight ? 'border-opacity-10' : 'border-opacity-0'}`}
          >
            <Image
              src={post.data.image.url}
              alt={post.data.image.url}
              width={100}
              height={100}
              class={"rounded-lg w-[100px] h-[100px] object-cover"}
            />
            <div class="mt-4 sm:my-auto">
              {post.data.highlight && (
                <p class="mb-2 w-[fit-content] text-black bg-[#ffffff] rounded-md text-sm py-0.5 px-2">Popular</p>
              )}
              <p class="text-[rgba(255,255,255,0.6)] mb-2">
                {post.data.pubDate.getDate() + '.' + (post.data.pubDate.getMonth() + 1) + '.' + post.data.pubDate.getFullYear()} Â·{" "}
                {post.data.external ? "External" : post.data.readingTime}
              </p>
              <h3 class="font-medium hover-underline">{post.data.title}</h3>
              <p class="text-sm opacity-60 mt-2 mb-3">
                {post.data.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</Layout>
